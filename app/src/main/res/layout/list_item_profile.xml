<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profileCardItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryMedium"
        android:textAllCaps="true"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileCardItemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileCardItemTitle" />

    <ImageView
        android:id="@+id/profileCardItemAction"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:tint="@color/colorAccent"
        android:visibility="gone"
        android:src="@drawable/ic_chevron_right_24_filled"
        app:layout_constraintBottom_toBottomOf="@id/profileCardItemValue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileCardItemTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>