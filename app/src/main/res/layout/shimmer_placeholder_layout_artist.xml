<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shimmerArtistName"
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:src="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/shimmerArtistUserName"
        app:layout_constraintStart_toEndOf="@id/shimmerArtistProfilePicture"
        app:layout_constraintTop_toTopOf="@id/shimmerArtistProfilePicture"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerArtistUserName"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:src="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/shimmerArtistProfilePicture"
        app:layout_constraintStart_toEndOf="@id/shimmerArtistProfilePicture"
        app:layout_constraintTop_toBottomOf="@id/shimmerArtistName"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerArtistProfilePicture"
        android:layout_width="@dimen/artist_profile_size"
        android:layout_height="@dimen/artist_profile_size"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_square"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerArtistProfilePicture"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem1"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem3"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem1"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem5"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem3"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem2"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem1"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem4"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem2"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem1"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem6"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem4"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem1"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem7"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem4"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem2"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem8"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem2"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem2"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem9"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem4"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem2"
        app:tint="#E4E4E4" />

</androidx.constraintlayout.widget.ConstraintLayout>