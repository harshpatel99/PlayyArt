<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shimmerHomeCategoryTitle"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomeCategoryItem1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomeCategoryItem2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomeCategoryTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomeCategoryItem2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomeCategoryItem3"
        app:layout_constraintStart_toEndOf="@id/shimmerHomeCategoryItem1"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomeCategoryTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomeCategoryItem3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomeCategoryItem4"
        app:layout_constraintStart_toEndOf="@id/shimmerHomeCategoryItem2"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomeCategoryTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomeCategoryItem4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomeCategoryItem5"
        app:layout_constraintStart_toEndOf="@id/shimmerHomeCategoryItem3"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomeCategoryTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomeCategoryItem5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintStart_toEndOf="@id/shimmerHomeCategoryItem4"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomeCategoryTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostTitle"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomeCategoryItem1"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem1"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem3"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem3"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem1"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostTitle"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem2"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toStartOf="@id/shimmerHomePostItem4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem1"
        app:tint="#E4E4E4" />

    <ImageView
        android:id="@+id/shimmerHomePostItem4"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/rounded_square_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmerHomePostItem2"
        app:layout_constraintTop_toBottomOf="@id/shimmerHomePostItem1"
        app:tint="#E4E4E4" />

</androidx.constraintlayout.widget.ConstraintLayout>