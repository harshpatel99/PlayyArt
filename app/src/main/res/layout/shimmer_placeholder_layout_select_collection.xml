<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/shimmerSelectCollectionTitle1"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:src="@color/shimmer_color"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionTitle2"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:src="@color/shimmer_color"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionTitle1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionItem1"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:src="@drawable/rounded_square_white"
        app:tint="#E4E4E4"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionTitle2"
        app:layout_constraintEnd_toStartOf="@id/shimmerSelectCollectionItem2"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionItem2"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:src="@drawable/rounded_square_white"
        app:tint="#E4E4E4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionTitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmerSelectCollectionItem1"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionItem3"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:src="@drawable/rounded_square_white"
        app:tint="#E4E4E4"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionItem1"
        app:layout_constraintEnd_toStartOf="@id/shimmerSelectCollectionItem4"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionItem4"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:src="@drawable/rounded_square_white"
        app:tint="#E4E4E4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionItem1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmerSelectCollectionItem3"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionItem5"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:src="@drawable/rounded_square_white"
        app:tint="#E4E4E4"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionItem3"
        app:layout_constraintEnd_toStartOf="@id/shimmerSelectCollectionItem6"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/shimmerSelectCollectionItem6"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:src="@drawable/rounded_square_white"
        app:tint="#E4E4E4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/shimmerSelectCollectionItem3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmerSelectCollectionItem5"/>

</androidx.constraintlayout.widget.ConstraintLayout>